{
  "name": "squarespace-starter",
  "version": "0.1.0",
  "description": "Squarespace Starter",
  "author": "Caleb Sanchez",
  "repository": {
    "type": "git",
    "url": "ssh://git@github.com:calebmichaelsanchez/squarespace-starter.git"
  },
  "config": {
    "css_file": "./template/styles/screen.css",
    "scss_file": "./scss/screen.scss"
  },
  "scripts": {
    "js:dev": "webpack -d",
    "js:prod": "webpack -p",

    "sassy": "node-sass --include-path scss $npm_package_config_scss_file $npm_package_config_css_file",
    "postcss": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' --output $npm_package_config_css_file $npm_package_config_css_file",

    "css:dev": "npm-run-all sassy",
    "css:prod": "npm-run-all sassy postcss",

    "sqs:build": "squarespace assemble -d './template' && webpack --config './template/webpack.config.js' --display-modules",
    "sqs:watch": "squarespace assemble -d './template' && webpack --config './template/webpack.config.js' --watch --hide-modules",
    "sqs:server": "squarespace runserver --auth -T -d './template'",
    "sqs:start": "squarespace setup -d './template' && (npm run sqs:watch & npm run sqs:server)",
    "sqs:deploy": "squarespace setup -d './template' && squarespace deploy -d './template'",

    "watch": "npm-run-all --parallel watch:js watch:scss sqs:start",
    "watch:js": "onchange \"./js\" -- npm run js:dev",
    "watch:scss": "onchange \"./scss\" -- npm run css:dev",

    "build": "npm-run-all js:prod css:prod"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.1",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "axios": "^0.13.1",
    "immutability-helper": "^2.1.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
