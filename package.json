{
  "config": {
    "css_file": "./sqs_template/styles/screen.css",
    "scss_file": "./scss/screen.scss"
  },
  "scripts": {
    "js:dev": "webpack -d",
    "js:prod": "webpack -p",

    "sassy": "node-sass --include-path scss $npm_package_config_scss_file $npm_package_config_css_file",
    "postcss": "postcss --use autoprefixer --autoprefixer.browsers 'last 2 versions' --output $npm_package_config_css_file $npm_package_config_css_file",

    "css:dev": "npm-run-all sassy",
    "css:prod": "npm-run-all sassy postcss",

    "build": "npm-run-all js:prod css:prod",

    "watch": "npm-run-all --parallel watch:*",
    "watch:js": "onchange \"./js\" -- npm run build:js-dev",
    "watch:scss": "onchange \"./scss\" -- npm run build:css"
  },
  "devDependencies": {
    "autoprefixer": "^6.7.1",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^2.3.0",
    "onchange": "^3.2.1",
    "postcss-cli": "^2.6.0",
    "webpack": "^1.13.1"
  },
  "dependencies": {
    "axios": "^0.13.1",
    "immutability-helper": "^2.1.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2"
  }
}
